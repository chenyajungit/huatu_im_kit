<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_normal_bg"
    android:orientation="vertical"
    >

    <include
        android:id="@id/rc_layout_msg_list"
        layout="@layout/rc_fr_messagelist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@+id/rc_extension" />
    <HorizontalScrollView
        android:id="@+id/click_head_hs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:scrollbars="none"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ext_common_phrases11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/rc_conner_stroke_shape"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:drawableLeft="@drawable/im_bu"
                android:drawablePadding="@dimen/rc_dimen_size_3"
                android:text="总部 更换地区"
                android:textColor="@color/rc_common_phrases_title_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ext_common_phrases22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/rc_conner_stroke_shape"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:drawableLeft="@drawable/im_personnel"
                android:drawablePadding="@dimen/rc_dimen_size_3"
                android:text="找人事"
                android:textColor="@color/rc_common_phrases_title_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ext_common_phrases33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="@dimen/rc_dimen_size_6"
                android:background="@drawable/rc_conner_stroke_shape"
                android:drawableLeft="@drawable/im_finance"
                android:drawablePadding="@dimen/rc_dimen_size_3"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:text="找财务"
                android:textColor="@color/rc_common_phrases_title_color"
                android:textSize="14sp" />




        </LinearLayout>
    </HorizontalScrollView>

    <io.rong.imkit.RongExtension
        android:id="@+id/rc_extension"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:RCStyle="SCE" />

</LinearLayout>