<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/total_ll_v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/text_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <View
                android:id="@+id/left_weight_view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        <io.rong.imkit.widget.AutoLinkTextView
            android:id="@+id/oa_conversition_item_autolink_tv"
            style="@style/RCTheme.Message.TextView"
            android:layout_width="fill_parent"
            android:text="222222222222222"
            android:layout_height="wrap_content"
            android:autoLink="web|email|phone"
            android:gravity="center_vertical|left"
            android:textColorLink="#333333"
            app:RCMaxWidth="280dp"
            android:paddingLeft="9dp" />
            <View
                android:id="@+id/right_weight_view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/public_services_1_ll"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/di_30_dp"
            android:minWidth="@dimen/di_100_dp"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingBottom="@dimen/di_6_dp"
            android:paddingRight="@dimen/dimen_10"
            android:background="@drawable/oa_im_rc_ic_bubble_left"
            >
            <TextView
                android:id="@+id/title_0_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di_16_dp"
                android:text="通知"
                android:paddingLeft="@dimen/dimen_10"
                android:textStyle="bold"
                android:textColor="@color/black_373d46"
                android:paddingTop="@dimen/di_3_dp"
                />

            <TextView
                android:id="@+id/title_1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di_16_dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="标题"
                android:textColor="@color/black_373d46"
                android:paddingTop="@dimen/di_3_dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_1_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_6"
                />
            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seprate_color"
                android:layout_marginTop="@dimen/di_3_dp"
                />
            <LinearLayout
                android:id="@+id/click_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/details_1_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/di_15_dp"
                    android:text="详情"
                    android:paddingLeft="@dimen/dimen_10"
                    android:textColor="@color/blue_4A88FB"
                    android:paddingTop="@dimen/dimen_10"
                    android:paddingBottom="@dimen/dimen_6"
                    />
                <TextView
                    android:layout_width="@dimen/di_8_dp"
                    android:layout_height="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_6"
                    android:background="@drawable/next"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/metting_ll"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginRight="@dimen/di_30_dp"
            android:minWidth="@dimen/di_100_dp"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingBottom="@dimen/di_6_dp"
            android:paddingRight="@dimen/dimen_10"
            android:background="@drawable/oa_im_rc_ic_bubble_left"
            >
            <TextView
                android:id="@+id/metting_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di_16_dp"
                android:text="会议"
                android:paddingLeft="@dimen/dimen_10"
                android:textStyle="bold"
                android:textColor="@color/black_373d46"
                android:paddingTop="@dimen/di_3_dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seprate_color"
                android:layout_marginTop="@dimen/di_3_dp"
                />
            <TextView
                android:id="@+id/meeting_little_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6"
                android:layout_marginBottom="@dimen/dimen_6"
                android:layout_marginLeft="@dimen/dimen_10"
                android:gravity="center|left"
                android:text=""
                android:textColor="#FF373D46"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/metting_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_6"
                />
            <LinearLayout
                android:id="@+id/button_ll"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFEEF1F6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/di_5_dp"
                    android:layout_height="45dp"
                    android:minWidth="@dimen/di_100_dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/metting_forward_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="转发"
                        android:textColor="#FF4A88FB"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFEEF1F6" />

                    <TextView
                        android:id="@+id/metting_add_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="参加"
                        android:textColor="#FF4A88FB"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/public_services_2_ll"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/di_30_dp"
            android:minWidth="@dimen/di_100_dp"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingBottom="@dimen/di_6_dp"
            android:paddingRight="@dimen/dimen_10"
            android:background="@drawable/oa_im_rc_ic_bubble_left"
            >
            <TextView
                android:id="@+id/title_2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di_16_dp"
                android:text="你可能想问："
                android:paddingLeft="@dimen/dimen_10"
                android:textColor="@color/black_373d46"
                android:paddingTop="@dimen/di_3_dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/q2_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10"
                android:background="@color/white"
                android:paddingTop="@dimen/dimen_6"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bu_setting_ll"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/di_30_dp"
            android:minWidth="@dimen/di_100_dp"
            android:background="@drawable/oa_im_rc_ic_bubble_left"
            >
            <TextView
                android:id="@+id/bu_setting_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎使用小e，系统默认您的地域为总部，自动回复答案为总部答案，如需更换请点击下方按钮。"
                android:textSize="14sp"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingBottom="@dimen/di_6_dp"
                android:paddingRight="@dimen/dimen_10"
                android:layout_centerHorizontal="true"
                android:textColor="#FF373D46"
                android:gravity="left" />
            <View
                android:id="@+id/view_horizontal"
                android:layout_width="280dp"
                android:layout_below="@id/bu_setting_content_tv"
                android:layout_height="1px"
                android:background="#e0e0e0" />
            <TextView
                android:id="@+id/change_bu_tv"
                android:layout_width="wrap_content"
                android:layout_below="@+id/view_horizontal"
                android:layout_height="wrap_content"
                android:textSize="@dimen/di_15_dp"
                android:text="更换地区"
                android:layout_centerHorizontal="true"
                android:textColor="@color/blue_4A88FB"
                android:paddingTop="@dimen/di_6_dp"
                android:paddingBottom="@dimen/di_6_dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_ll_v2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/di_30_dp"
        android:minWidth="@dimen/di_100_dp"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingBottom="@dimen/di_6_dp"
        android:paddingRight="@dimen/dimen_10"
        android:background="@drawable/oa_im_rc_ic_bubble_left"
        >

        <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="主标题"
            android:paddingLeft="@dimen/dimen_10"
            android:textStyle="bold"
            android:textColor="@color/black_373d46"
            android:paddingTop="@dimen/di_3_dp"
            />
        <TextView
            android:id="@+id/subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/di_3_dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="center|left"
            android:text="副标题"
            android:textColor="#FF373D46"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/di_3_dp"
            android:textColor="#373D46"
            android:textSize="14sp"
            android:text="weeeeeeeeeeeeeeeeeeeeeeeeeeeeweeeeeeeeeeeeeeeeeeeeeeeeeeee"
            />

        <LinearLayout
            android:id="@+id/action_button_ll"
            android:layout_marginTop="@dimen/di_3_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/action_button_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_10"
                android:background="@color/white"
                />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>